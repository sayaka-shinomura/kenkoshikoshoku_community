<div class="container">
  <h4 class="my-5 text-center">ｍｙレシピ一覧</h4>
  <div class="row">
    <div class="col">
      <div class="d-flex flex-wrap">
        <% @myrecipes.each do |myrecipe| %>
        <div class="mr-3 d-flex flex-column mb-4">
          <%= link_to recipe_path(myrecipe) do %>
            <% if myrecipe.recipe_image.attached? %>
              <%= image_tag myrecipe.recipe_image, size: "340x250" %>
            <% else %>
              <%= image_tag 'no-image', size: "340x250" %>
            <% end %>
          <% end %>
          <p class="ml-1 text-dark"><strong><%= myrecipe.name %></strong></p>
          <td>投稿日：<%= myrecipe.created_at.strftime('%Y/%m/%d') %></td>
        </div>
        <% end %>
      </div>

  </div>
</div>
</div>

