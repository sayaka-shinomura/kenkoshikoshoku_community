<div class="container">
  <h4 class="my-3 text-center">効能登録</h4>
 <div class="row">
  <div class="col-6 px-5 px-sm-0 mx-auto">
  <!--#新規投稿エラーメッセージの表示-->
  <div class="form-body p-4">
   <% if @effect.errors.any? %>
   <%= @effect.errors.count %>error prohibited this obj from being saved:
   <ul>
    <% @effect.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
   <% end %>

   <%= form_with model: Effect.new, url:admin_effects_path(@effect.id), method: :post do |f| %>
   <div class="form-group">
     <table class="table table-borderless">
      <tbody>
        <tr>
         <td class="col-2"><%= f.label :name, "効能名" %></td>
         <td class="col-5"><%= f.text_field :name, autofocus: true, id:"inputTitle", class:"form-control" %></td>
       </tr>
       <tr>
         <td class="col-2"><%= f.label :introduction, "効能概要" %></td>
         <td class="col-5"><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control", :size=>"40x6" %></td>
       </tr>
       <tr>
        <td class="col-2"></td>
        <td class="col-5">
         <%= f.submit '新規登録', class:"btn btn-success" %>
         <% end %>
        </td>
       </tr>
       </tbody>
     </table>
     </div>


  </div>
 </div>
</div>
