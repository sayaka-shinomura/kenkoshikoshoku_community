<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffff55">ユーザー新規登録</h4>
  <div calss="row">
    <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group">
          <div class="signupform">
            <div class="flex-row">
              <div class="flex-item">アカウント名</div>
              <div class="flex-item"><%= f.text_field :account_name, autofocus: true, class:"form-control", autocomplete: "account_name", placeholder: "10文字以下で入力して下さい" %></div>
            </div>
            <div class="flex-row">
              <div class="flex-item">メールアドレス</div>
              <div class="flex-item"><%= f.email_field :email, autocomplete: "email", class:"form-control" %></div>
            </div>
            <div class="flex-row">
              <div class="flex-item">電話番号</div>
              <div class="flex-item"><%= f.text_field :telephone_number, autocomplete: "telephone_number", class:"form-control", placeholder: "ハイフン不要" %></div>
            </div>
            <div class="flex-row">
              <div class="flex-item">生年月日</div>
              <div class="flex-item"><%= f.text_field :birth_date, autocomplete: "birth_date", class:"form-control", placeholder: "（例）19990101" %></div>
            </div>
            <div class="flex-row">
              <div class="flex-item">性別</div>
              <div class="flex-item">
                <%= f.radio_button :gender, :man, checked: true %>
                <%= f.label :gender, User.genders_i18n[:man], value: :man %>
                <%= f.radio_button :gender, :woman %>
                <%= f.label :gender, User.genders_i18n[:woman], value: :woman %>
              </div>
            </div>
            <div class="flex-row">
              <div class="flex-item">パスワード</div>
              <div class="flex-item"><%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "6文字以上で入力して下さい" %></div>
            </div>
            <div class="flex-row">
              <div class="flex-item">パスワード(確認用)</div>
              <div class="flex-item"><%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", placeholder: "確認の為、再度入力して下さい" %></div>
            </div>
          </div>
        </div>
        <div class="text-center">
          <%= f.submit "　新規登録　", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>

      <p class="my-5 text-center">※登録がお済みの方は　<%= link_to "こちら", new_user_session_path, class: "underline" %>　からログインしてください</p>
    </div>
  </div>
</div>
