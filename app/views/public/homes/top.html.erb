<div class="container">
  <div class="row my-2">
    <%= render "public/homes/vegetable_rank", itme: @vegetable_ranks, url: root_path %>

    <div class="col-5 px-5 px-sm-0 mx-auto">
      <%= image_tag 'image2', size: "400x350" %>

      <h4 class="my-3 text-center" style="background-color: #ffff55">皆様からのご意見・ご要望</h4>
      <table class="mx-auto">
        <tbody>
          <% @requests.each do |request| %>
            <tr>
              <td><%= request.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr><td><%= request.content %></td></tr>
            <tr><td class="text-right"><%= link_to "詳細", request_path(request) %></td></tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center my-5">
        <%= link_to "全てのご意見・ご要望を見る", requests_path, class:"btn btn-info" %>
      </div>
    </div>

    <div class="col-4 px-5 px-sm-0 mx-auto">
      <%= render "public/homes/want_rank", itme: @want_ranks, url: root_path %>
      <%= render "public/requests/form", itme: @request, url: root_path %>
    </div>
  </div>
</div>