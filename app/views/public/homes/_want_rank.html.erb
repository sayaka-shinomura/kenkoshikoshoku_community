  <h5 class="text-center my-2">
    作ってみたいリスト<br>
    ランキング
  </h5>
  <table>
  <% @want_ranks.each.with_index(1) do |rank, i| %>
    <% if i == 1 %>
      <tr>
        <td class="col-1"><%= i %>位</td>
        <td class="col-2"><%= rank.name %></td>
      </tr>
    <% elsif i == 2 %>
    <tr>
      <td><%= i %>位</td>
      <td><%= rank.name %></td>
    </tr>
    <% elsif i == 3 %>
    <tr>
      <td><%= i %>位</td>
      <td><%= rank.name %></td>
    </tr>
    <% else %>
    <tr>
      <td><%= i %>位</td>
      <td><%= rank.name %></td>
    </tr>
    <% end %>
  <% end %>
  </table>

