<div class="col-4 px-5 px-sm-0 mx-auto">
  <div class="ranking">
    <h4 class="text-center" style="background-color: #ffb830;">
      <strong>投稿レシピ数<br>
      ランキング</strong>
    </h4>
    <table class="text-center">
      <% @vegetable_ranks.each.with_index(1) do |rank, i| %>
        <% if i == 1 %>
          <tr>
            <td class="col-1"><h4><%= i %>位</h4></td>
            <td><h4><%= rank.name %></h4></td>
          </tr>
        <% elsif i == 2 %>
          <tr>
            <td class="col-1"><h4><%= i %>位</h4></td>
            <td class="col-2"><h4><%= rank.name %></h4></td>
          </tr>
        <% elsif i == 3 %>
          <tr>
            <td class="col-1"><h4><%= i %>位</h4></td>
            <td class="col-2"><h4><%= rank.name %></h4></td>
          </tr>
        <% else %>
        <tr>
          <td><%= i %>位</td>
          <td><%= rank.name %></td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>