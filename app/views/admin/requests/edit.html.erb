<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffb830">リクエスト対応処理</h4>
  <div class="row">
    <div class="col-8 px-5 px-sm-0 mx-auto">
      <%= form_with model: @request, url: admin_request_path(@request.id), method: :patch do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th class="col-2">リクエストID</th>
              <td class="col-5"><%= @request.id %></td>
            </tr>
            <tr>
              <th>投稿ユーザー</th>
              <td><%= @request.user.account_name %></td>
            </tr>
            <tr>
              <th>受付日</th>
              <td><%= @request.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>ご意見・ご要望</th>
              <td><%=safe_join(@request.content.split("\n"),tag(:br))%></td>
            </tr>
            <tr>
              <th>対応内容</th>
              <td><%= f.text_area :reply, autofocus: true, id:"inputRply", class:"form-control", :size=>"30x10" %></td>
            </tr>
            <tr>
              <th>対応ステータス</th>
              <td>
                <%= f.radio_button :confirm, true %><%= f.label :confirm, "確認中", class: "text-active mr-3" %>
                <%= f.radio_button :confirm, false %><%= f.label :confirm, "対応済み", class: "text-invalid" %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="text-center my-3">
          <%= f.submit 'リクエスト対応を行う', class:"btn btn-outline-warning w-25" %>
        </div>
      <% end %>
    </div>
  </div>
</div>