<div class="row">
  <div class="text-center mx-auto">
    <%= form_with(url: search_vegetables_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "野菜を検索する", class: "search-input" %>
      <%= form.submit "含有栄養素で絞り込む", class: "search-btn" %>
      <p>◆摂取したい栄養素名を入力してください◆</p>
    <% end %>
  </div>

  <div class="text-center mx-auto">
    <%= form_with(url: search_vegetables_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "野菜を検索する", class: "search-input" %>
      <%= form.submit "効能で絞り込む", class: "search-btn" %>
      <p>◆期待している効能を入力してください◆</p>
    <% end %>
  </div>
</div>

<div class="my-3">
  <div class="d-flex flex-wrap">
    <% @vegetable.uniq.each do |vegetable| %>
      <div class="mr-3 d-flex flex-column mb-4">
        <%= link_to vegetable_path(vegetable.id) do %>
          <% if vegetable.vegetable_image.attached? %>
            <%= image_tag vegetable.vegetable_image, size: "340x250" %>
          <% else %>
            <%= image_tag 'no-image', size: "340x250" %>
          <% end %>
        <% end %>
        <p class="ml-1 text-dark flex-wrap w-75" >
          <strong><%= vegetable.name %></strong></br>
          栄養素：<% vegetable.nutrient_tags.each do |nutrient_tag| %>
            <%= nutrient_tag.nutrient.name %>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
