<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffb830">効能情報編集</h4>
  <div class="row">
    <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">

      <div class="form-body p-4">
        <% if @effect.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= @effect.errors.count %>エラーにより、保存できませんでした。
         </h6>
         <% @effect.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
        </ul>
        <% end %>
      </div>

      <%= render "admin/effects/form", itme: @effect, url: admin_effect_path(@effect), submit: '　　保存　　' %>
    </div>
  </div>
</div>