<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffb830">栄養素情報詳細</h4>
  <div class="row">
    <div class="col-lg-8 col-md-10 colsm-12 px-5 px-sm-0 mx-auto">
      <div class="nutrient-show">
        <div class="flex-row">
          <div class="flex-item">栄養素ID</div>
          <div class="flex-item"><%= @nutrient.id %></div>
        </div>
        <div class="flex-row">
          <div class="flex-item">栄養素名</div>
          <div class="flex-item"><%= @nutrient.name %></div>
        </div>
        <div class="flex-row">
          <div class="flex-item">栄養素概要</div>
          <div class="flex-item"><%=safe_join(@nutrient.introduction.split("\n"),tag(:br))%></div>
        </div>
        <div class="flex-row">
          <div class="flex-item">効能</div>
          <div class="flex-item">
            <% @nutrient.effect_tags.each do |effect_tag| %>
              <%= effect_tag.effect.name %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="text-center my-3">
        <%= link_to "　　編　集　　", edit_admin_nutrient_path(@nutrient), class:"btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>