<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffb830">効能情報詳細</h4>
  <div class="row">
    <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
      <div class="effect-show">
        <div class="flex-row">
          <div class="flex-item">効能ID</div>
          <div class="flex-item"><%= @effect.id %></div>
        </div>
        <div class="flex-row">
          <div class="flex-item">効能名</div>
          <div class="flex-item"><%= @effect.name %></div>
        </div>
        <div class="flex-row">
          <div class="flex-item">効能概要</div>
          <div class="flex-item"><%=safe_join(@effect.introduction.split("\n"),tag(:br))%></div>
        </div>
      </div>
      <div class="text-center my-3">
        <%= link_to "　　編  集　　", edit_admin_effect_path(@effect), class:"btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>
