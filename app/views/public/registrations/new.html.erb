<div class="container">
  <div calss="row">
    <div class="col-9 px-5 px-sm-0 mx-auto">
      <h4 class="my-3 text-center" style="background-color: #ffff55">ユーザー新規登録</h4>

      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-3"><%= f.label :account_name %></td>
            <td class="col-6"><%= f.text_field :account_name, autofocus: true, autocomplete: "account_name", :size=>"50" %></td>
          </tr>
          <tr>
            <td class="col-3"><%= f.label :email %></td>
            <td class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %></td>
          </tr>
          <tr>
            <td class="col-3"><%= f.label :telephone_number %></td>
            <td class="col-6"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", :size=>"50" %></td>
          </tr>
          <tr>
            <td class="col-3"><%= f.label :birth_date %></td>
            <td class="col-6"><%= f.text_field :birth_date, autofocus: true, autocomplete: "birth_date", :size=>"50" %></td>
          </tr>
          <tr>
            <td class="col-3"><%= f.label :gender %></td>
            <td class="col-6">
              <%= f.radio_button :gender, "0", :checked => true %>
              <%= f.label :gender, User.genders_i18n[:man], class: "mr-5" %>
              <%= f.radio_button :gender, "1" %>
              <%= f.label :gender, User.genders_i18n[:woman] %>
            </td>
          </tr>
          <tr>
            <td class="col-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
      　　　　　　<% end %>
            </td>
            <td class="col-6"><%= f.password_field :password, autocomplete: "new-password", :size=>"50" %></td>
          </tr>
          <tr>
            <td class="col-3"><%= f.label :password_confirmation %></td>
            <td class="col-6"><%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"50" %></td>
          </tr>
    　　　　<tr>
            <td class="col-3"></td>
            <td class="col-6"><%= f.submit "新規登録", class: "btn btn-success w-50" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>

      <p class="text-center">※登録がお済みの方は　<%= link_to "こちら", new_user_session_path, class: "underline" %>　からログインしてください</p>
    </div>
  </div>
</div>
