<%= form_with model: Request.new, url:requests_path(@request.id), method: :post do |f| %>
  <div class="form-group">
    <table class="table table-borderless">
      <tbody>
        <td class ="text-center">
          <h5>ご意見・ご要望</h5>
          <%= f.text_area :content, autofocus: true, id:"inputContent", class:"form-control", :size=>"40x6", placeholder: content_text %>
          <%= f.submit 'リクエストを投稿する', class:"btn btn-success my-2" %>
        </td>
      </tbody>
    </table>
<% end %>


