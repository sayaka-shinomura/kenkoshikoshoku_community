<div class="container">
    <div class="col-lg-6 col-md-8 col-sm-12 px-5 px-sm-0 mx-auto">
    <h4 class="my-3 text-center" style="background-color: #ffff55"><%= @user.account_name %>さんのアカウント管理</h4>

    <table class="table">
      <tbody>
        <tr>
          <td>アカウント名</td>
          <td><%= @user.account_name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @user.telephone_number %></td>
        </tr>
        <tr>
          <td>生年月日</td>
          <td><%= @user.birth_date %></td>
        </tr>
        <tr>
          <td>性別</td>
          <td><%= @user.gender_i18n %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_active? %>
              <span>有効</span>
            <% else %>
              <span>退会済み</span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="text-center my-3">
      <%= link_to "　　編集　　", edit_admin_user_path(@user), class:"btn btn-outline-primary" %>
    </div>
    </div>
  </div>
</div>

