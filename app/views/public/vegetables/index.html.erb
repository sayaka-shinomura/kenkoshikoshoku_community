<div class="container">
  <h4 class="my-3 text-center">野菜を探そう</h4>
  <div class="row">
    <div class="col-md-9">
      <div class="d-flex flex-wrap">
        <% @vegetables.each do |vegetable| %>
        <div class="mr-3 d-flex flex-column mb-4">
          <%= link_to vegetable_path(vegetable.id) do %>
            <%= image_tag vegetable.vegetable_image, format: "jpeg", fallback: "no-image.png", size: "250x180" %>
            <% end %>
            <p class="ml-1 text-dark"><%= vegetable.name %></p>

        <% end %>
      </div>
    </div>

    <div class="d-flex justify-content-center text-center">
      <%= paginate @vegetables %>
    </div>
  </div>
</div>
</div>
