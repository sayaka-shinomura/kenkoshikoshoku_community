<% if current_user != @recipe.user %>
  <div class="text-center my-3">
    <% if @recipe.find_made_list(current_user).blank? %>
      <%= link_to "作ってみたリストに登録", recipe_made_lists_path(@recipe), method: :post, class: "btn btn-success" %>
    <% else %>
      <%= link_to "作ってみたリストから解除", recipe_made_list_path(@recipe,@recipe.find_made_list(current_user)), method: :delete, class: "btn btn-outline-success" %>
    <% end %>
  </div>
<% end %>