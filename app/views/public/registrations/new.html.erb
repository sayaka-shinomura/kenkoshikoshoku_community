<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffff55">ユーザー新規登録</h4>
  <div calss="row">
    <div class="col-lg-9 col-sm-12 px-5 px-sm-0 mx-auto">
     <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="form-group">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th class="col-lg-2 col-md-3 col-sm-2">アカウント名</th>
              <td class="col-lg-7 col-md-7 col-sm-12"><%= f.text_field :account_name, autofocus: true, class:"form-control", autocomplete: "account_name" %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email, autocomplete: "email", class:"form-control" %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :telephone_number, autocomplete: "telephone_number", class:"form-control" %></td>
            </tr>
            <tr>
              <th>生年月日</th>
              <td><%= f.text_field :birth_date, autocomplete: "birth_date", class:"form-control" %></td>
            </tr>
            <tr>
              <th>性別</th>
              <td>
                <%= f.radio_button :gender, "0", :checked => true %>
                男性
                <%= f.radio_button :gender, "1" %>
                女性
              </td>
            </tr>
            <tr>
              <th>
                パスワード
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
              </th>
              <td><%= f.password_field :password, autocomplete: "new-password", class:"form-control" %></td>
            </tr>
            <tr>
              <th>パスワード(確認用)</th>
              <td><%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>

      <p class="my-5 text-center">※登録がお済みの方は　<%= link_to "こちら", new_user_session_path, class: "underline" %>　からログインしてください</p>
    </div>
  </div>
</div>
