<!DOCTYPE html>
<html>
  <head>
    <title>KenkoshikoshokuCommunity</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--#FontAwesomeの導入-->
    <script src="https://kit.fontawesome.com/a7b743e44e.js" crossorigin="anonymous"></script>"
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header class="<%= (admin_signed_in? ? "admin_header" : "" ) %>">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="vavbar-brand text-light" href="/">
            <%= link_to root_path, class: 'nav-link text-white' do %>
            <span>健康志向</span>
            <% end %>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

          <!--# 管理者ログイン後のヘッダー-->
          <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to '会員一覧', admin_users_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '野菜一覧', admin_vegetables_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '栄養素一覧', admin_nutrients_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '効能一覧', admin_effects_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>

          <!--# ユーザーログイン後のヘッダー-->
          <% elsif user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Top', root_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'マイページ', mypage_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'レシピ一覧', recipes_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '野菜一覧', vegetables_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '栄養素一覧', nutrients_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '効能一覧', effects_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>

          <!--# ログイン前のヘッダー-->
          <% else %>
            <li class="nav-item">
              <%= link_to 'About', about_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
            　<%= link_to 'ゲストログイン', user_guest_sign_in_path, class: 'nav-link text-white' %>
            </li>
          <% end %>
          </ul>
          </div>
        </div>
      </nav>
    </header>



    <main>
      <%= yield %>
    </main>

    <footer class="container mt-5">
      <div class="row">
        <div class="mx-auto">
        </div>
      </div>
    </footer>

  </body>
</html>
