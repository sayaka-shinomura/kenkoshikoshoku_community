<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffff55">ユーザー一覧</h4>
  <div class="row">
    <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
      <div class="user-index">
        <div class="flex-row">
          <div class="title-item">ユーザーID</div>
          <div class="title-item">ユーザー名</div>
          <div class="title-item">ステータス</div>
          <div class="title-item"></div>
          <div class="title-item"></div>
        </div>
        <% @users.each do |user| %>
        <div class="flex-row">
          <div class="flex-item"><%= user.id %></div>
          <div class="flex-item"><%= user.account_name %></div>
          <div class="flex-item">
            <% if user.is_active? %>
              <span style="color: #ffb830">有効</span>
            <% else %>
              <span style="color: gray">退会済み</span>
            <% end %>
          </div>
          <div class="flex-item"><%= link_to "詳細", admin_user_path(user), class:"text-primary" %></div>
          <div class="flex-item"><%= link_to "編集", edit_admin_user_path(user), style: "color: #e70989;" %></div>
        </div>
        <div class="border-item"></div>
        <% end %>
      </div>
      <%= paginate @users %>
    </div>
  </div>
</div>