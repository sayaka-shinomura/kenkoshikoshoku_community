<div class="container">
  <h4 class="mt-3 text-center" style="background-color: #ffff55">野菜一覧</h4>
  <div class="row">
    <div class="col-lg-8 col-md-10 col-sm-12 px-5 px-sm-0 mx-auto">
      <div class="text-right my-3">
        <%= link_to "　新規登録　", new_admin_vegetable_path, class:"btn btn-outline-success" %>
      </div>

      <div class="vegetable-index">
        <div class="flex-row">
          <div class="title-item">
            <p class="title">野菜ID</p>
          </div>
          <div class="title-item">
            <p class="title">野菜名</p>
          </div>
          <div class="title-item"></div>
          <div class="title-item"></div>
          <div class="title-item"></div>
        </div>
        <% @vegetables.each do |vegetable| %>
          <div class="flex-row">
            <div class="flex-item"><%= vegetable.id %></div>
            <div class="flex-item"><%= vegetable.name %></div>
            <div class="flex-item"><%= link_to "詳細", admin_vegetable_path(vegetable) %></div>
            <div class="flex-item"><%= link_to "編集", edit_admin_vegetable_path(vegetable), style: "color: #e70989;" %></div>
            <div class="flex-item"><%= link_to "削除", admin_vegetable_path(vegetable), method: :delete, data: { confirm: "本当に削除しますか？" }, style: "color: red;" %></div>
          </div>
          <div class="border-item"></div>
        <% end %>
      </div>
      <%= paginate @vegetables %>
    </div>
  </div>
</div>
