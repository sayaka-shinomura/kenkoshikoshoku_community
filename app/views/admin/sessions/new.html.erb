<div class="container">
  <div calss="row">
    <div class="col-lg-6 col-md-10 col-sm-12 mx-auto">
      <h4 class="my-3 text-center" style="background-color: #c66358">管理者ログイン</h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="loginform">
        <div class="flex-row">
          <div class="flex-item">メールアドレス</div>
          <div class="flex-item"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></div>
        </div>
        <div class="flex-row">
          <div class="flex-item">パスワード</div>
          <div class="flex-item"><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></div>
        </div>
      </div>

      <div class="text-center mt-3">
        <%= f.submit "　ログイン　", class: "btn btn-primary" %>
      </div>
      <% end %>
      <%= render "admin/shared/links" %>
   </div>
  </div>
</div>
