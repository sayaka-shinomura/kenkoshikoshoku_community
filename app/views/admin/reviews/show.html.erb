<div class="container">
  <h4 class="my-3 text-center">レビュー詳細</h4>
  <div class="row">
    <div class="col-6 px-5 px-sm-0 mx-auto">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-2"><p>レビューID</p></td>
            <td class="col-5"><%= @review.id %></td>
       　　</tr>
          <tr>
            <td class="col-2"><p>レビューユーザー</p></td>
            <td class="col-5"><%= @review.user.account_name %></td>
       　  </tr>
       　 <tr>
            <td class="col-2"><p>レビューレシピID</p></td>
            <td class="col-5"><%= @review.recipe_id %></td>
       　</tr>
       　 <tr>
            <td class="col-2"><p>レビューレシピ名</p></td>
            <td class="col-5"><%= @review.recipe.name %></td>
       　</tr>
          <tr>
            <td class="col-2"><p>評価</th>
            <td>
              <div id="star_<%= @review.id %>"></div>
                <script>
                  $(document).on('turbolinks:load', function() {
                  let elem = document.querySelector('#star_<%= @review.id %>');
                  if (elem == null) return;

                  elem.innerHTML = "";
                  let opt = {
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    score: "<%= @review.star %>",
                    readOnly: true,
                  };
                  raty(elem, opt);
                  });
                </script>
              </td>
            </tr>
          <tr>
            <td><p>コメント</p></td>
            <td><%=safe_join(@review.comment.split("\n"),tag(:br))%></td>
          </tr>
          <tr>
            <td><p>レビュー更新日</p></td>
            <td><%= @review.updated_at.strftime('%Y/%m/%d') %></td>
          </tr>
       </tbody>
     </table>
    </div>
  </div>


</div>