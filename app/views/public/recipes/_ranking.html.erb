  <tr>
    <td><%= i %>位</td>
    <td><%= rank.name %></td>
  </tr>
  <% elsif i == 2 %>
  <tr>
    <td><%= i %>位</td>
    <td><%= rank.name %></td>
  </tr>
  <% elsif i == 3 %>
  <tr>
    <td><%= i %>位</td>
    <td><%= rank.name %></td>
  </tr>
  <% else %>
  <tr>
    <td><%= i %>位</td>
    <td><%= rank.name %></td>
  </tr>
  <% end %>
  <% end %>
</table>