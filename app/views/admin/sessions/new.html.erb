<div class="container">
  <div calss="row">
    <div class="col-8 px-5 px-sm-0 mx-auto">
      <h4 class="my-3 text-center" style="background-color: #c66358">管理者ログイン</h4>

     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table">
        <tbody>
          <tr>
            <td class="col-2"><%= f.label :'メールアドレス' %></td>
            <td class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %></td>
          </tr>
          <tr>
            <td><%= f.label :'パスワード' %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", :size=>"50" %></td>
          </tr>
          <tr>
            <td class="col-2"></td>
            <td class="col-6"><%= f.submit "ログイン", class:"btn btn-primary w-50" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= render "admin/shared/links" %>
   </div>
  </div>
</div>
