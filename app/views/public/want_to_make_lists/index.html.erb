<div class="container">
  <h4 class="my-3 text-center">作ってみたリスト一覧</h4>
  <div class="row">
    <div class="col">
      <div class="d-flex flex-wrap">
        <% @want_list.each do |want| %>
        <div class="mr-3 d-flex flex-column mb-4">
          <%= link_to recipe_path(want) do %>
            <% if want.recipe_image.attached? %>
              <%= image_tag want.recipe_image, size: "340x250" %>
            <% else %>
              <%= image_tag 'no-image', size: "340x250" %>
            <% end %>
          <% end %>
          <p class="ml-1 text-dark"><strong><%= want.name %></strong></p>
        </div>
        <% end %>
      </div>

  </div>
</div>
</div>
