<div class="container">
    <h4 class="my-3 text-center">野菜一覧</h4>
    <div class="text-right my-3">
          <%= link_to "新規登録", new_admin_vegetable_path, class:"btn btn-outline-success" %>
    </div>

    <div class="row">
      <div class="col-md-8 offset-md-1">
        <table class="table">
          <thead>
            <tr>
              <th align="left">野菜ID</th>
              <th align="left">野菜名</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr><% @vegetables.each do |vegetable| %></tr>
              <td><%= vegetable.id %></td>
              <td><%= vegetable.name %></td>
              <td><%= link_to "詳細", admin_vegetable_path(vegetables) %></td>
              <td><%= link_to "編集", edit_admin_vegetables_path(vegetables) %></td>
              <% end %>
          </tbody>
        </table>
        </div>
      </div>
</div>