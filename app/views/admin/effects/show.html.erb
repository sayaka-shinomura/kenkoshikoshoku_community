<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffb830">効能情報詳細</h4>
  <div class="row">
    <div class="col-7 px-5 px-sm-0 mx-auto">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="col-1">効能ID</th>
            <td class="col-6"><%= @effect.id %></td>
       　　</tr>
          <tr>
            <th>効能名</th>
            <td><%= @effect.name %></td>
       　  </tr>
          <tr>
            <th>効能概要</th>
            <td><%=safe_join(@effect.introduction.split("\n"),tag(:br))%></td>
          </tr>
        </tbody>
      </table>

      <div class="text-center">
        <%= link_to "編集", edit_admin_effect_path(@effect), class:"btn btn-primary w-25" %>
      </div>
    </div>
  </div>
</div>
