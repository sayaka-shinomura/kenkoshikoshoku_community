<div class="container">
    <h4 class="my-3 text-center" style="background-color: #aeeff0">ユーザー一覧</h4>

    <div class="row">
      <div class="col-8 px-5 px-sm-0 mx-auto">
        <table class="table">
          <thead>
            <tr>
              <th>ユーザーID</th>
              <th>ユーザー名</th>
              <th>ステータス</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr><% @users.each do |user| %></tr>
              <td><%= user.id %></td>
              <td><%= user.account_name %></td>
              <td>
                <% if user.is_active? %>
                  <span class="text-warning">有効</span>
                <% else %>
                  <span class="text-muted">退会済み</span>
                <% end %>
              </td>
              <td><%= link_to "詳細", admin_user_path(user), class:"text-primary" %></td>
              <td><%= link_to "編集", edit_admin_user_path(user), style: "color: #c66358;" %></td>
              <% end %>
          </tbody>
        </table>
        <%= paginate @users %>
        </div>
      </div>
</div>