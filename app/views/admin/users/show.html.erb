<div class="container">
  <div class="row">
    <div class="col-6 px-5 px-sm-0 mx-auto">
    <h3 class="my-5 text-center"><%= @user.account_name %>さんのアカウント管理</h3>

    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>アカウント名</td>
          <td><%= @user.account_name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @user.telephone_number %></td>
        </tr>
        <tr>
          <td>生年月日</td>
          <td><%= @user.birth_date %></td>
        </tr>
        <tr>
          <td>性別</td>
          <td><%= @user.gender %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_active? %>
              <span class="text-active">有効</span>
            <% else %>
              <span class="text-invalid">退会済み</span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="text-center my-3">
        <%= link_to "編集", edit_admin_user_path(@user), class:"btn btn-primary col-5" %>
      </div>
    </div>
  </div>
</div>

