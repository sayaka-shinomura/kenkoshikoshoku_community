<div class="container">
  <h4 class="my-5 text-center">効能編集</h4>
  <div class="row">
   <div class="com-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <div class="form-body p-4">
     <% if @effect.errors.any? %>
     <ul class="alert alert-danger" role="alert">
       <h6 class="alert-heading">
        <%= @effect.errors.count %>error prohibited this obj from being saved:
       </h6>
       <% @effect.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
     <% end %>
   </div>

   <%= form_with model: @effect, url: admin_effect_path(@effect.id), method: :patch do |f| %>
   <div class="form-group">
     <table class="table table-borderless">
       <tbody>
         <tr>
           <td class="col-2"><%= f.label :name, "効能名" %></td>
           <td class="col-5"><%= f.text_field :name, autofocus: true, id:"inputTitle", class:"form-control" %></td>
         </tr>
         <tr>
           <td class="col-2"><%= f.label :introduction, "効能概要" %></td>
           <td class="col-5"><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control", :size=>"40x6" %></td>
         </tr>
      </tbody>
     </table>

    <div class="text-center">
    <%= f.submit '保存', class:"btn btn-success col-3" %>
    <% end %>
    </div>

   </div>
  </div>
</div>

