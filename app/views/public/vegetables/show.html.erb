<div class="container">
  <h4 class="my-3 text-center" style="background-color: #ffb830">野菜を知ろう</h4>
  <div class="row">
    <!--# 野菜画像-->
    <div class="col-lg-4 col-md-4 col-sm-12 px-5 px-sm-0 mx-auto">
      <div class="text-center">
        <% if @vegetable.vegetable_image.attached? %>
          <%= image_tag @vegetable.vegetable_image, width: '100%', height: '100%' %>
        <% else %>
          <%= image_tag 'no-image', width: '100%', height: '80%' %>
        <% end %>
      </div>
    </div>

    <!--# 野菜詳細情報-->
    <div class="col-lg-6 col-md-6 col-12 px-5 px-sm-0 mx-auto">
      <table class="table">
        <tbody>
          <tr>
            <td class="col-2">野菜名</td>
            <td class="col-5"><%= @vegetable.name %></td>
       　  </tr>
       　  <tr>
            <td>栄養素</td>
            <td><%= @nutrients.uniq.join("・") %></td>
          </tr>
           <tr>
            <td>効能</td>
            <td><%= @effects.uniq.join("・") %></td>
          </tr>
          <tr>
            <td>旬の時期</td>
            <td><%= @vegetable.seasonal %></td>
          </tr>
          <tr>
            <td>産地情報</td>
            <td><%=safe_join(@vegetable.production_area.split("\n"),tag(:br))%></td>
          </tr>
          <tr>
            <td>保存方法</td>
            <td><%=safe_join(@vegetable.keeping.split("\n"),tag(:br))%></td>
          </tr>
          <tr>
            <td>おすすめ情報</td>
            <td><%=safe_join(@vegetable.introduction.split("\n"),tag(:br))%></td>
          </tr>
       </tbody>
     </table>
    </div>
  </div>
</div>